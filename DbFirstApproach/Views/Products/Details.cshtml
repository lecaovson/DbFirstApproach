@model DbFirstApproach.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>
<table class="table">
    <tr>
        <th>ProductID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Date of Purchase</th>
        <td>@Model.DateOfPurchase.Value.ToString("d/M/yyyy")</td>
    </tr>
    <tr>
        <th>Availablity Status</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.Category.CategoryName</td>
    </tr>
    <tr>
        <th>Brand </th>
        <td>@Model.Brand.BrandName</td>
    </tr>


    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>


</table>

<a href="/products/index">Back to Products</a>